@model ReadAllLibrary.Models.Order
@{
    ViewBag.Title = "MarkOrderAsReturnedView";
}

<h2>Mark Order As Returned</h2>

<dl class="dl-horizontal">


    <dt>
        Order ID
    </dt>

    <dd>
        @Model.OrderId
    </dd>
    <dt>
        Username
    </dt>
    <dd>
        @Model.User.UserName
    </dd>
    <dt>
        Order date
    </dt>
    <dd>
        @Model.OrderDate
    </dd>
    <dt>
        Return date
    </dt>

    <dd>
        @Model.ReturnDate
    </dd>

    <dt>
        Total
    </dt>

    <dd>
        @Model.Total
    </dd>

    <dt>
        Status
    </dt>
@switch (Model.OrderStatus)

{


    case 1:
                    <dd>
                        Active
                    </dd>
                    break;
                case 2:
                    <dd>
                        Fine issued

                    </dd>
                    break;
                case 3:
                    <dd>
                        Fine to be issued
                    </dd>
                    break;
                case 5:
                    <dd>
                        Fine paid - still to be returned
                    </dd>
                    break;
            }
   

</dl>
 
@using (Html.BeginForm("MarkOrderAsReturned", "BookingsClerk", new { id = Model.OrderId }, FormMethod.Post, null))
{ 
<button class="btn-default">Confirm</button>
}