        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LName)
        </dd>

        <dt>
            Membership
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

    </dl>

    @using (Html.BeginForm("StaffDeleteMemberAccount", "Manage", new { id = Model.Id }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        if (User.IsInRole("SuperAdmin") || User.IsInRole("Manager") || User.IsInRole("Membership Clerk"))
        {
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListAllUsers")
        </div>
        }
     
    
    }

    @using (Html.BeginForm("DeleteMemberAccount", "Manage", new { id = Model.Id }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        if (User.IsInRole("Unlimited Member") || User.IsInRole("Limited Member"))
        {
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
               
            </div>
        }


    }
</div>